<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    a:layout_width="match_parent"
    a:layout_height="match_parent">

    <ImageView
        a:id="@+id/ivAvatar"
        a:layout_width="0dp"
        a:layout_height="0dp"
        a:layout_margin="20dp"

        app:layout_constraintBottom_toBottomOf="@id/llContent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/llContent"
        app:layout_constraintTop_toTopOf="@id/llContent" />

    <LinearLayout
        a:id="@+id/llContent"
        a:layout_width="0dp"
        a:layout_height="wrap_content"
        a:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintLeft_toRightOf="@id/ivAvatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            a:id="@+id/tvLabel"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"

            tools:text="user name" />

        <TextView
            a:id="@+id/tvSiteAdmin"
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:background="@drawable/shape_badge"
            a:gravity="left|center_vertical"
            a:visibility="gone"

            tools:text="STAFF"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>